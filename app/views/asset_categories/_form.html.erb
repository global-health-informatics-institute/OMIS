<%= form_with(model: asset_category) do |form| %>
  <div class="mb-3">
    <%= form.label :category, style: "display: block", class: "form-label" %>
    <%= form.text_field :category, class: "form-control" %>
    <div style="color: red">
      <% if asset_category.errors.include?(:category) %>
          <% asset_category.errors.full_messages_for(:category).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :description, style: "display: block", class: "form-label" %>
    <%= form.text_field :description, class: "form-control" %>
    <div style="color: red">
      <% if asset_category.errors.include?(:description) %>
          <% asset_category.errors.full_messages_for(:description).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.submit "Save", class: "btn btn-success btn-block" %>
  </div>
<% end %>
