<%= form_with model: @leave_request, url: "/leave_requests/#{@leave_request.id}" do |form| %>
  <div class="row mt-3 p-2">
    <div class="col p-2">
      <div class="card">
        <div class="card-header card-header-dark">
          <div class="row align-items-center">
            <div class="col-md-10">
              <h5 class="mb-0"><%= @leave_request.leave_type%> Request</h5>
            </div>
            <div class="col-md-2 text-end">
              <span class="badge bg-black text-white p-3 fs-6">
                <%= @leave_request.leave_state %>
              </span>
            </div>
          </div>
        </div>

        <div class="card-body">
          <div class="row mb-3">
            <div class="col-md-6">
              <div class="fw-normal">Requested By:</div>
              <div class="fw-bold fst-italic"><%= @leave_request.requester %></div>
            </div>
            <div class="col-md-6">
              <div class="fw-normal">Requested On:</div>
              <div class="fw-bold fst-italic"><%= @leave_request.created_at.strftime("%m/%d/%Y") %></div>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-6">
              <div class="fw-normal">Start On:</div>
              <div class="fw-bold fst-italic"><%= @leave_request.start_on.strftime("%m/%d/%Y - %I:%M %p") %></div>
            </div>
            <div class="col-md-6">
              <div class="fw-normal">End On:</div>
              <div class="fw-bold fst-italic"><%= @leave_request.end_on.strftime("%m/%d/%Y - %I:%M %p") %></div>
            </div>
          </div>



          <div class="row mb-3">
            <div class="col-md-6">
              <div class="fw-normal">Reviewed By:</div>
              <div class="fw-bold fst-italic"><%= @leave_request.leave_reviewer rescue nil %></div>
              <div class="text-muted small"><%= @leave_request.reviewed_on.strftime("%d %B, %Y %I:%M %p") rescue nil %></div>
            </div>
            <div class="col-md-6">
              <div class="fw-normal">
                <%= @leave_request.approved_by ? "#{@leave_request.leave_state} By" : 'Approved By:' %>
              </div>
              <div class="fw-bold fst-italic"><%= @leave_request.leave_approver rescue nil %></div>
              <div class="text-muted small"><%= @leave_request.approved_on.strftime("%d %B, %Y %I:%M %p") rescue nil %></div>
            </div>
          </div>
        </div>
      </div>

      <hr>

      <%= form.hidden_field :status, value: params[:status] %>
      <% (@possible_actions || []).each do |action| %>
        <% path = "/leave_requests/#{ @leave_request.id}/#{action.parameterize(separator: '_')}" %>
        <%= link_to action, path,
              class: "btn btn-info me-2",
              method: :put,
              data: {
                turbo_method: :put,
                turbo_confirm: "Are you sure you want to #{action.split(" ")[0]} this request?"
              } %>
      <% end %>
    </div>
  </div>
<% end %>