<style>
  .tableContainer {
      height: 50vh;
      overflow: auto;
      text-align: left !important;
  }
  .welcome {
      float: right;
      font-family: "Arial", sans-serif;
      font-size: medium;
  }
</style>

<script>

  var labels = "<%= @project_names.collect { |x| x.short_name }.join(",") %>"
  new Chart(document.getElementById("loeTargetPie"), {
      type : 'doughnut',
      data : {
          labels : labels.split(','),
          datasets : [ {
              data : <%= @loe_targets.collect { |x| (x.allocated_effort) }.to_s %>
          } ]
      },
      options : {
          responsive: false,
          plugins: {
              legend: {
                  display: false
              },
              tooltip: {
                  callbacks: {
                      // Custom label for tooltip
                      label: function (tooltipItem) {
                          let label = tooltipItem.label;
                          let value = tooltipItem.
                              formattedValue;
                          return `${value} %`
                      }
                  }
              }
          }
      }
  });
  var currLabels = "<%= @loe_current.keys.join(",") %>"
  new Chart(document.getElementById("loeActualPie"), {
      type : 'doughnut',
      data : {
          labels : currLabels.split(','),
          datasets : [ {
              data : <%= @loe_current.collect { |x,y| ((y/@total_hrs)*100).floor(2) }.to_s %>
          } ]
      },
      options : {
          responsive: false,
          plugins: {
              legend: {
                  display: false
              }
          }
      }
  });
</script>
