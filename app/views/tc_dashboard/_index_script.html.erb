<script>
  // Time in milliseconds
  const internshipDuration = 4 * 60 * 1000;  
  const statisticsDuration = 18 * 30 * 1000;  

  const internshipView = document.getElementById('projects-view');
  const statisticsView = document.getElementById('statistics-view');

  // Show internship screen initially
  internshipView.classList.remove('hidden');
  statisticsView.classList.add('hidden');

  setTimeout(() => {
    // After 4 minutes, show statistics and hide internship
    internshipView.classList.add('hidden');
    statisticsView.classList.remove('hidden');
  }, internshipDuration);

  // Optional: Repeat the cycle (loop every 21 minutes)
  setInterval(() => {
    internshipView.classList.remove('hidden');
    statisticsView.classList.add('hidden');

    setTimeout(() => {
      internshipView.classList.add('hidden');
      statisticsView.classList.remove('hidden');
    }, internshipDuration);
  }, internshipDuration + statisticsDuration);
</script>


