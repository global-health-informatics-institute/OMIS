<div class="flex flex-col h-screen">

  <!-- Top 3 Charts (40% height) -->
  <div class="h-[45%] flex flex-row space-x-4 px-4 py-2">
    <!-- AGE -->
    <div class="flex-1 flex flex-col bg-white rounded shadow p-4">
      <h2 class="text-4xl font-bold text-gray-800 mb-7"><%= @gender_age[:card_title_1] %></h2>
      <div class="mb-10"></div>
      <canvas id="ageChart" class="w-full h-full "></canvas>
    </div>

    <!-- TENURE -->
    <div class="flex-1 flex flex-col bg-white rounded shadow p-4">
      <h2 class="text-4xl font-bold text-gray-800 mb-7"><%= @tenure[:card_title_3] %></h2>
      <div class="mb-10"></div>
      <canvas id="workforceChart" class="w-full h-full "></canvas>
    </div>

    <!-- GENDER -->
    <div class="flex-1 flex flex-col bg-white rounded shadow p-4 min-h-0 overflow-hidden">
    <h2 class="text-4xl font-bold text-gray-800 mb-7">Workforce Distribution by Sex</h2>

    <div class="flex-1 min-h-0">
        <canvas id="genderChart" class="w-full h-full"></canvas>
    </div>
    </div>

</div>
  
  <!-- Bottom Chart (60% height) -->
  <div class="h-[55%] flex items-center justify-center px-4 py-2">
    <div class="w-full h-full bg-white rounded shadow-lg p-6 flex flex-col">
      <canvas id="rententionChart" class="w-full h-full"></canvas>
    </div>
  </div>

</div>

<%= render 'tc_dashboard/statistics_script' %>
