<script>
  document.addEventListener('DOMContentLoaded', function () {
    const ctx = document.getElementById('rententionChart').getContext('2d');

    new Chart(ctx, {
      type: 'line',
      data: {
        labels: [
          <% @tenure[:past_four_year_quarters].each do |quarter| %>
