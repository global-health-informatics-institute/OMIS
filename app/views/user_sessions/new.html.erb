<div class="wrapper fadeInDown">
  <div id="formContent">
    <img src="/assets/ic_omis.png" width="40" height="40"><br/>
    <h2>SIGN IN</h2>
    <!-- Login Form -->
    <%= form_with model: @user, url: user_sessions_path, scope: :user do |form| %>
      <div>
        <%= form.label :username %>
        <%= form.text_field :username, required: true %>
      </div>
      <div>
        <%= form.label :password %>
        <%= form.password_field :password, required: true %>
      </div>
      <%= form.submit "Sign In" %>
    <% end %>
  </div>
</div>

