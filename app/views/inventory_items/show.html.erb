<h1>InventoryItem#show</h1>
<div>
  <div class="row mt-4 p-0">
    <div class="col p-0">
      <div class="card ">
          <div class="col p-0">
            <div class="card ">
              <div class="card-header card-header-dark">
                <nav>
                  <div class="nav nav-tabs " id="nav-tab" role="tablist">
                    <button class="nav-link " id="nav-item-details-tab" data-bs-toggle="tab" data-bs-target="#nav-item-details"
                            type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Item Details</button>
                    <button class="nav-link" id="nav-item-tracking-tab" data-bs-toggle="tab" data-bs-target="#nav-item-tracking"
                            type="button" role="tab" aria-controls="nav-assignedTasks" aria-selected="false">Item Tracking</button>
<!--                    <button class="nav-link " id="nav-password-tab" data-bs-toggle="tab" data-bs-target="#nav-password" type="button" role="tab" aria-controls="nav-project" aria-selected="true">Change Password</button>-->
                  </div>
                </nav>
              </div>
              <div class="card-body">
                <div class="tab-content" id="nav-tabContent">
                  <div class="tab-pane text-center" id="nav-item-details" role="tabpanel" aria-labelledby="nav-item-details-tab">
                    <div class="row mt-3">
                      <div class="col-2 fw-normal">Item Name</div>
                      <div class="col-1 fw-bold">:</div>
                      <div class="col fw-light fst-italic text-start"><%= @inventory_item_type[0] %></div>
                    </div>
                    <div class="row mt-3">
                      <div class="col-2 fw-normal">Manufacturer</div>
                      <div class="col-1 fw-bold">:</div>
                      <div class="col fw-light fst-italic text-start"><%= @inventory_item_type[1] %></div>
                    </div>
                    <div class="row mt-3">
                      <div class="col-2 fw-normal">Location</div>
                      <div class="col-1 fw-bold">:</div>
                      <div class="col fw-light fst-italic text-start"><%= @inventory_item.storage_location %></div>
                    </div>
                    <div class="row mt-3">
                      <div class="col-2 fw-normal">Supplier</div>
                      <div class="col-1 fw-bold">:</div>
                      <div class="col fw-light fst-italic text-start"><%= @inventory_item.supplier %></div>
                    </div>
                    <div class="row mt-3">
                      <div class="col-2 fw-normal">Unit Price</div>
                      <div class="col-1 fw-bold">:</div>
                      <div class="col fw-light fst-italic text-start"><%= @inventory_item.unit_price %></div>
                    </div>
                    <div class="row mt-3">
                      <div class="col-2 fw-normal">Quantity Available </div>
                      <div class="col-1 fw-bold">:</div>
                      <div class="col fw-light fst-italic text-start"><%= @inventory_item.quantity %></div>
                    </div>
                    <div class="row mt-3">
                      <div class="col-2 fw-normal">Dispatched</div>
                      <div class="col-1 fw-bold">:</div>
                      <div class="col fw-light fst-italic text-start"><%= @inventory_item.quantity_used %></div>
                    </div>
                  </div>
                  <div class="tab-pane fade" id="nav-item-tracking" role="tabpanel" aria-labelledby="nav-item-tracking-tab">
                    <div class="row mt-3">
                      <div class="col-2 fw-normal">Custodian</div>
                      <div class="col-2 fw-light fst-italic"><%= @current_user.full_name %></div>
                      <div class="col-2 fw-normal">Date requested</div>
                      <div class="col-2 fw-light fst-italic"><%#= @person.middle_name %></div>
                      <div class="col-2 fw-normal">Quantity requested</div>
                      <div class="col-2 fw-light fst-italic"><%#= @person.last_name %></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>