<div class="card h-100">
  <div class="card-body p-2, text-center">
    <h6>Products out of stock</h6>
    <% if @threshold_data.any? %>
      <p style="font-size:200%;"><%= @total_low_stock %> products</p>
    <% else %>
      <p  style="font-size:200%;">0 products</p>
    <% end %>
    <%= link_to "More", "/inventory_item_types/prod_out_of_stock", style: "text_decoration: none;
     position: absolute; bottom: 5px; right: 8px;" %>
  </div>
</div>