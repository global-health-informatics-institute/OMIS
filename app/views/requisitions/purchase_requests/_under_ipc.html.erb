<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h4>IPC Requirement</h4>
        </div>
        <div class="card-body">
          <div class="form-check form-check-inline">
            <%= form.radio_button :requires_ipc, true, 
                class: "form-check-input", 
                id: "requires_ipc_true",
                data: { action: "change->purchase#ipcChanged" } %>
            <%= form.label :requires_ipc_true, "Requires IPC", class: "form-check-label" %>
          </div>
          
          <div class="form-check form-check-inline">
            <%= form.radio_button :requires_ipc, false, 
                class: "form-check-input", 
                id: "requires_ipc_false",
                data: { action: "change->purchase#ipcChanged" } %>
            <%= form.label :requires_ipc_false, "Does not require IPC", class: "form-check-label" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const ipcRadios = document.querySelectorAll('input[name="requisition[requires_ipc]"]');
  
  ipcRadios.forEach(radio => {
    radio.addEventListener('change', function() {
      const event = new CustomEvent('ipc:changed', {
        detail: { requiresIpc: this.value === 'true' }
      });
      document.dispatchEvent(event);
    });
  });
});
</script>