<%= form_with model: @requisition, url: complete_procurement_purchase_request_path(@requisition), multipart: true, method: :patch do |form| %>
  <div class="container m-4">
    <div class="row mt-3 p-2">
      <div class="col p-2">
        <div class="card">
          <div class="card-header card-header-dark">
            <div class="row">
              <div class="col col-md-9">
                <h5>Upload Proof of Payment</h5>
              </div>
              <div class="col col-md-3 text-end">
                <span class="fw-bold fst-italic">Status: <%= @requisition.current_state %></span>
              </div>
            </div>
          </div>

          <div class="card-body">
            <!-- POP Upload Heading -->
            
            <!-- Drag and drop area -->
            <div class="row mb-3">
              <div class="col">
                <div class="border border-secondary rounded p-4 text-center bg-light" 
                     id="pop_drop_zone"
                     style="cursor: pointer;">
                  <p class="mb-2"><strong>Drag & drop PDF files here</strong> or click to select</p>
                  <p class="text-muted small">(PDF files only)</p>
                  <%= form.file_field :pop_attachments, multiple: true, accept: ".pdf", hidden: true, id: "pop_upload" %>
                </div>

                <!-- Upload button -->
                <div class="text-end mt-3">
                  <button class="btn btn-secondary" type="button" id="pop_upload_button">Upload</button>
                </div>

                <!-- File preview list -->
                <ul class="list-group mt-3 mb-5" id="pop_file_list"></ul>

              </div>
            </div> <!-- /row -->
          </div> <!-- /card-body -->
        </div> <!-- /card -->
      </div> <!-- /col -->
    </div> <!-- /row -->
  </div> <!-- /container -->
<% end %>
