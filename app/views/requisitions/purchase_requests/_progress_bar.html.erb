<div class="card-body bg-light">
  <div class="row">
    <div class="col-12">
      <h6 class="text-center mb-2">Registration Progress</h6>
      
      <!-- Progress percentage -->
      <div class="d-flex justify-content-between align-items-center mb-1">
        <small>0%</small>
        <small>100%</small>
      </div>
      
      <!-- Progress bar -->
      <div class="progress" style="height: 20px;">
        <div class="progress-bar <%= @assets_count == @total_expected ? 'bg-success' : 'progress-bar-striped progress-bar-animated' %>" 
             role="progressbar" 
             style="width: <%= progress_percentage = (@assets_count.to_f / @total_expected) * 100 %>%;"
             aria-valuenow="<%= progress_percentage %>" 
             aria-valuemin="0" 
             aria-valuemax="100">
          <span class="fw-bold"><%= progress_percentage.round %>%</span>
        </div>
      </div>
      
      <!-- Progress text -->
      <div class="text-center mt-2">
        <small class="<%= @assets_count == @total_expected ? 'text-success' : 'text-muted' %>">
          <% if @assets_count < @total_expected %>
            <%= @assets_count %> of <%= @total_expected %> assets registered
            (<%= @total_expected - @assets_count %> remaining)
          <% else %>
            âœ… All <%= @total_expected %> assets registered successfully!
          <% end %>
        </small>
      </div>
      
      <!-- Step indicators (optional) -->
      <% if @total_expected > 1 %>
        <div class="row mt-3">
          <% @total_expected.to_i.times do |step| %>
            <div class="col text-center">
              <div class="step-indicator <%= step < @assets_count ? 'completed' : (step == @assets_count ? 'current' : 'pending') %>">
                <span class="step-number"><%= step + 1 %></span>
                <small class="step-label">Asset <%= step + 1 %></small>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
