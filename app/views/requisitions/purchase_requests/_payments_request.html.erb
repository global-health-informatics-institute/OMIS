<div id="flash">
  <% if flash[:notice] %>
    <div class="alert alert-success"><%= flash[:notice] %></div>
  <% end %>
</div>

<%= form_with model: @requisition, url: request_payments_purchase_request_path(@requisition), multipart: true, method: :patch do |form| %>
  <div class="row mt-3 p-2">
    <div class="col p-2">
      <div class="card">
        <div class="card-header card-header-dark">
          <div class="row">
            <div class="col col-md-9">
              <h5>Payment Request Form</h5>
            </div>
            <div class="col col-md-2">
              <span class="fw-bold fst-italic">Status: <%= @requisition.current_state %></span>
            </div>
          </div>
        </div>

        <div class="card-body">
          <div class="row mt-3">
            <div class="col-2 fw-normal">Initiated On</div>
            <div class="col-2 fw-bold fst-italic"><%= @requisition.initiated_on.strftime("%m/%d/%Y") %></div>
            <div class="col-2 fw-normal">Initiated By</div>
            <div class="col-2 fw-bold fst-italic"><%= @requisition.user.full_name %></div>
            <div class="col-2 fw-normal">Department</div>
            <div class="col-2 fw-bold fst-italic"><%= @requisition&.department&.department_name %></div>
          </div>

          <div class="row mt-4 mb-4">
            <div class="col-2 fw-normal">Purpose</div>
            <div class="col-2 fw-bold fst-italic"><%= @requisition.purpose %></div>
            <div class="col-2 fw-normal">Quantity</div>
            <div class="col-2 fw-bold fst-italic"><%= @requisition.quantity %></div>
          </div>

          <div class="row mt-3 mb-3">
            <div class="col-2 fw-normal">Item Description</div>
            <div class="col-2 fw-bold fst-italic"><%= @requisition.item_description %></div>
            <div class="col-2 fw-normal">Donor</div>
            <div class="col-2 fw-bold fst-italic">
              <%= @requisition.purchase_request_attachment&.stakeholder&.stakeholder_name %>
            </div>
            <div class="col-2 fw-normal">Reviewed By</div>
            <div class="col-2 fw-bold fst-italic"><%= @requisition.reviewer rescue nil %></div>
          </div>

          <div class="row mt-3 mb-3">
            <div class="col-2 fw-normal">Processed By</div>
            <div class="col-2 fw-bold fst-italic"><%= @requisition.approver rescue nil %></div>
          </div>

          <% if @requisition.current_state == "Procured" %>
            <div class="row mt-4 mb-3">
              <div class="col-4">
                <%= form.label :attachments, "Attach Supporting Documents (PDF, Images, Excel)", class: "form-label" %>
                <%= form.file_field :attachments, multiple: true, class: "form-control", direct_upload: true %>
              </div>
            </div>
          <% end %>

          <div class="row mt-3">
  <div class="col-md-4">
    <%= form.label :unit_price, "Unit Price (MWK)", class: "form-label" %>
    <% unit_price = @requisition.quantity.to_f > 0 ? (@requisition.requisition_items.first&.value.to_f / @requisition.quantity.to_f) : 0 %>
    <%= form.number_field :unit_price,
              step: "0.01",
              class: "form-control",
              value: number_with_precision(unit_price, precision: 2, delimiter: ','),
              readonly: true,
              disabled: true %>
  </div>

  <div class="col-md-4">
    <%= form.label :amount, "Total Amount (MWK)", class: "form-label" %>
    <% if ["Pending Payment Request", "Item Accepted"].include?(@requisition.current_state) %>
      <% amount_value = @requisition.requisition_items.first&.value.to_f %>
      <% options = {
        step: "0.01",
        class: "form-control #{'is-invalid' if flash[:amount_error]}",
        min: 0,
        required: true,
        placeholder: "Enter total amount",
        value: (amount_value > 0 ? amount_value : nil),
        data: {
          purchase_target: "amountField",
          limit: @purchase_request_threshold,
          action: "input->purchase#formatNumber input->purchase#checkAmountThreshold",
          threshold: @purchase_request_threshold
        },
      } %>
      <%= form.text_field :amount, options %>
      <% if flash[:amount_error] %>
        <div class="invalid-feedback d-block">
          <%= flash[:amount_error] %>
        </div>
      <% end %>
    <% else %>
      <%= form.hidden_field :amount, value: @requisition.requisition_items.first&.value %>
      <div class="fw-bold fst-italic">
        <%= number_with_precision(@requisition.requisition_items.first&.value || 0, precision: 2, delimiter: ',') %>
      </div>
    <% end %>
  </div>

  <div class="col-md-4">
    <% if ["Item Accepted", "Pending Payment Request"].include?(@requisition.current_state) %>
      <%= form.label :supplier, "Supplier", class: "form-label" %>
      <%= form.text_field :supplier,
            value: @requisition.purchase_request_attachment&.supplier,
            class: "form-control",
            required: true,
            name: "requisition[supplier]",
            placeholder: "Enter supplier name" %>
    <% else %>
      <label class="form-label">Supplier</label>
      <div class="fw-bold fst-italic"><%= @requisition.purchase_request_attachment&.supplier %></div>
    <% end %>
  </div>
</div>
        </div>
      </div>

      <hr>

      <%= form.hidden_field :requisition_type, value: "Purchase Request" %>
      <%= form.hidden_field :workflow_state_id, value: params[:workflow_state_id] %>

      <div class="d-flex gap-2">
        <% if (@possible_actions || []).include?("Request Payments") %>
          <%= form.submit "Request Payments", class: "btn btn-info", data: { disable_with: "Processing..." } %>
        <% end %>
      </div>

      <!-- Alert style -->
      <div id="custom-alert-container" style="position: fixed; top: 20px; right: 20px; z-index: 9999;"></div>
    </div>
  </div>
<% end %>
