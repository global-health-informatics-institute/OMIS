
<div id="flash">
  <% if flash[:notice] %>
    <div class="alert alert-success"><%= flash[:notice] %></div>
  <% end %>
</div>

<%= form_with model: @requisition, url: complete_procurement_purchase_request_path(@requisition), multipart: true, method: :patch do |form| %>
  <div class="row mt-3 p-2">
    <div class="col p-2">
      <div class="card">
        <div class="card-header card-header-dark">
          <div class="row">
            <div class="col col-md-9">
              <h5>Payment Request Form</h5>
            </div>
            <div class="col col-md-2">
              <span class="fw-bold fst-italic">Status: <%= @requisition.current_state %></span>
            </div>
          </div>
        </div>
  
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <div class="row mb-3">
                <div class="col-4 fw-normal">Initiated On</div>
                <div class="col-8 fw-bold fst-italic"><%= @requisition.initiated_on.strftime("%m/%d/%Y") %></div>
              </div>
              <div class="row mb-3">
                <div class="col-4 fw-normal">Initiated By</div>
                <div class="col-8 fw-bold fst-italic"><%= @requisition.user.full_name %></div>
              </div>
              <div class="row mb-3">
                <div class="col-4 fw-normal">Department</div>
                <div class="col-8 fw-bold fst-italic"><%= @requisition&.department&.department_name %></div>
              </div>
              <div class="row mb-3">
                <div class="col-4 fw-normal">Purpose</div>
                <div class="col-8 fw-bold fst-italic"><%= @requisition.purpose %></div>
              </div>
              <div class="row mb-3">
                <div class="col-4 fw-normal">Quantity</div>
                <div class="col-8 fw-bold fst-italic"><%= @requisition.quantity %></div>
              </div>
              <% if ["LPO Accepted", "Pending Payment Request"].include?(@requisition.current_state) %>
                <div class="row mb-3">
                  <div class="col-4">
                    <%= form.label :supplier, "Supplier", class: "form-label" %>
                    <%= form.text_field :supplier,
                          value: @requisition.purchase_request_attachment&.supplier,
                          class: "form-control",
                          name: "requisition[supplier]",
                          placeholder: "Enter supplier name" %>
                  </div>
                </div>
              <% else %>
                <div class="row mb-3">
                  <div class="col-4 fw-normal">Supplier</div>
                  <div class="col-8 fw-bold fst-italic"><%= @requisition.purchase_request_attachment&.supplier %></div>
                </div>
              <% end %>
            </div>

            <div class="col-md-6">
              <div class="row mb-3">
                <div class="col-4 fw-normal">Reviewed By</div>
                <div class="col-8 fw-bold fst-italic"><%= @requisition.reviewer rescue nil %></div>
              </div>
              <div class="row mb-3">
                <div class="col-4 fw-normal">Processed By</div>
                <div class="col-8 fw-bold fst-italic"><%= @requisition.approver rescue nil %></div>
              </div>
              <div class="row mb-3">
                <div class="col-4 fw-normal">Item Description</div>
                <div class="col-8 fw-bold fst-italic"><%= @requisition.item_description %></div>
              </div>
              <div class="row mb-3">
                <div class="col-4 fw-normal">Donor</div>
                <div class="col-8 fw-bold fst-italic">
                  <%= @requisition.purchase_request_attachment&.stakeholder&.stakeholder_name %>
                </div>
              </div>

              <div class="row mb-3">
                <div class="col-4">
                  <%= form.label :unit_price, "Unit Price", class: "form-label" %>
                  <% unit_price = @requisition.quantity.to_f > 0 ? (@requisition.requisition_items.first&.value.to_f / @requisition.quantity.to_f) : 0 %>
                  <%= form.number_field :unit_price,
                            step: "0.01",
                            class: "form-control",
                            value: number_with_precision(unit_price, precision: 2),
                            readonly: true,
                            disabled: true %>
                </div>

                <div class="col-4">
                  <%= form.label :amount, "Total Amount", class: "form-label" %>
                  <% if ["Pending Payment Request", "LPO Accepted"].include?(@requisition.current_state) %>
                    <% amount_value = @requisition.requisition_items.first&.value.to_f %>
                    <% options = {
                      step: "0.01",
                      class: "form-control #{'is-invalid' if flash[:amount_error]}",
                      min: 0,
                      required: true,
                      placeholder: "Enter total amount",
                      value: (amount_value > 0 ? amount_value : nil),
                      data: {
                        purchase_target: "amountField",
                        limit: @purchase_request_threshold,
                        action: "input->purchase#checkAmountThreshold",
                        threshold: @purchase_request_threshold
                      },
                    } %>

                    <%= form.number_field :amount, options %>
                    <% if flash[:amount_error] %>
                      <div class="invalid-feedback d-block">
                        <%= flash[:amount_error] %>
                      </div>
                    <% end %>
                  <% else %>
                    <%= form.hidden_field :amount, value: @requisition.requisition_items.first&.value %>
                    <div class="fw-bold fst-italic">
                      <%= number_with_precision(@requisition.requisition_items.first&.value || 0, precision: 2) %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>

          <% if @requisition.current_state == "Procured" %>
            <div class="row mt-4 mb-3">
              <div class="col-12">
                <%= form.label :attachments, "Attach Supporting Documents (PDF, Images, Excel)", class: "form-label" %>
                <%= form.file_field :attachments, multiple: true, class: "form-control", direct_upload: true %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <hr>

      <%= form.hidden_field :requisition_type, value: "Purchase Request" %>
      <%= form.hidden_field :workflow_state_id, value: params[:workflow_state_id] %>

      <div class="d-flex gap-2">
        <button type="button" data-action="purchase#showIpcConfirmationModal" class="btn btn-warning"> Request IPC </button>

       <% if (@possible_actions || []).include?("Request Payment") %>
         <%= form.submit "Request Payment", class: "btn btn-info", data: { disable_with: "Processing..." } %>
       <% end %>
      </div>

<!-- Alert style -->
<div id="custom-alert-container" style="position: fixed; top: 20px; right: 20px; z-index: 9999;"></div>


 <div class="modal fade" id="ipcConfirmationModal" tabindex="-1" aria-labelledby="ipcConfirmationModalLabel" aria-hidden="true"  data-purchase-target="ipcConfirmationModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ipcConfirmationModalLabel">Internal Procurement Committee Required</h5>
        <%# <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> %>
      </div>
      <div class="modal-body">
    <%= form.hidden_field :workflow_state_id, value: params[:workflow_state_id] %>

  <div class="mb-3">
    <%= form.label :traveller_ids, "Inform IPC member" %>
    <input
      type="text"
      class="form-control mb-2"
      placeholder="search IPC members"
      data-action="input->purchase#filterEmployees"
      data-purchase-target="employeeSearch"
      />
    <div
      class="form-control"
      style="height: auto; max-height: 100px; overflow-y: auto;"
      data-purchase-target="employeeCheckboxList"
      >

      <% (employees || []).sort_by { |e| e.person.first_name }.each do |employee| %>
        <div class="form-check">
          <input
            type="checkbox"
            class="form-check-input"
            id="employee_<%= employee.id %>"
            value="<%= employee.id %>"
            name="ipc_employee_ids[]"
            data-action="change->purchase#updateSelectedEmployees"
            data-employee-name="<%= employee.person&.full_name || 'Unknown Employee' %>"
           <%= 'checked' if (@requisition.try(:ipc_employee_ids) || [])&.include?(employee.id) %>
          />
          <label for="employee_<%= employee.id %>" class="form-check-label">
            <%= employee.person&.full_name || "Unknown Employee" %>

          </label>
        </div>
      <% end %>
    </div>
  </div>
  <div class="mb-3">
  <label class="form-label">Selected IPC Members</label>
   <input
       type="text"
       class="form-control" readonly
       data-purchase-target="selectedEmployeesDisplay"
         />
  </div>


  <div class="mb-3">
    <label for="ipc_meeting_date" class="form-label">Meeting Date</label>
    <input
      type="date"
      id="ipc_meeting_date"
      class="form-control"
      data-purchase-target="ipcMeetingDate"
    />
  </div>
  <div class="col-md-6 mb-3">
    <label for="ipc_meeting_time" class="form-label">Meeting Time</label>
    <input
      type="time"
      id="ipc_meeting_time"
      class="form-control"
      data-purchase-target="ipcMeetingTime"
    />
  </div>
</div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" data-action="purchase#notNow">Not Now</button>
        <button type="button" class="btn btn-primary" data-action="purchase#continueWithIpc">Send Email</button>
      </div>
    </div>
  </div>
</div>

    </div>
  </div>
<% end %>
