
<!-- MIDDLE SECTION (2 CARDS)-->
<div class="grid grid-cols-2 gap-4 h-[52.5%]">

    <%# BAR GRAPH %>
    <div class="bg-white rounded-2xl shadow p-4 overflow-hidden">
        <div class="h-full w-full flex flex-col">
            <h2 class="text-xl font-semibold text-gray-800 mb-2  pb-5">Workforce Age Distribution</h2>
            <div class="h-80 w-full">
            <canvas id="ageChart" class="w-full h-full"></canvas>
            </div>          
        </div>               
    </div>


  <%# PIE CHART %>
  <div class="bg-white rounded-2xl shadow p-4 overflow-hidden flex items-center justify-center space-x-8">

      <!-- Canvas for Pie Chart -->
      <canvas id="genderChart" class="w-48 h-48"></canvas>
      <!-- Text Breakdown with Color Keys -->
      <div class="space-y-4 text-left">
        <div class="flex items-center space-x-3">
          <h1 class="text-xl font-semibold text-gray-800">Workforce Gender Distribution</h1>
        </div>
        <div class="flex items-center space-x-3">
          <span class="w-4 h-5 rounded-full bg-pink-300 inline-block"></span>
          <span class="text-lg text-gray-700"><strong>Total Female:</strong> <%=@metadata[:gender_female]%></span>
        </div>
        <div class="flex items-center space-x-3">
          <span class="w-4 h-5 rounded-full bg-blue-800 inline-block"></span>
          <span class="text-lg text-gray-700"><strong>Total Male:</strong> <%=@metadata[:gender_male]%></span>
        </div>
        <div class="flex items-center space-x-3">
          <span class="w-4 h-5 rounded-full bg-gray-500 inline-block"></span>
          <span class="text-lg text-gray-700"><strong>Total Other:</strong> <%=@metadata[:gender_other]%></span>
        </div>
      </div>
  </div>

</div>


<!-- Bottom Section (2 Cards) -->
<div class="grid grid-cols-2 gap-4 h-[30.5%]">
  <!-- Total Headcount Card -->
  <div class="bg-white rounded-2xl shadow flex flex-col justify-center items-center p-6">
    <div class="text-8xl font-bold text-gray-800"><%=@metadata[:headcount]%></div>
    <div class="text-3xl font-semibold text-gray-600 mt-2">Total Employees</div>
  </div>

  <!-- New Hires Card -->
  <div class="bg-white rounded-2xl shadow flex flex-col justify-center items-center p-6">
    <div class="text-8xl font-bold text-green-600">+<%=@metadata[:new_hires]%></div>
    <div class="text-3xl font-semibold text-gray-600 mt-2">New Hires</div>
  </div>
</div>