<turbo-frame id="fuel_consumption_frame">
  <script type="text/javascript">
    (() => {
      const field = document.getElementById("vehicle_consumption");
      const value = <%= raw (fuel || 0).to_json %>;

      if (field) {
        field.value = value;
        console.log("Injected fuel consumption into hidden field:", value);
      } else {
        console.warn("Hidden field for fuel not found (vehicle_consumption)");
      }
    })();
  </script>
</turbo-frame>
